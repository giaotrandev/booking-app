<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Bus Ticket</title>
    <style>
      body {
        font-family: 'Courier New', Courier, monospace;
        width: 80mm;
        margin: 0;
        padding: 5mm;
        font-size: 12px;
        line-height: 1.2;
        text-align: center;
        background: white;
      }
      .ticket {
        border: 1px dashed #000;
        padding: 5mm;
      }
      .header {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 5mm;
      }
      .details p {
        margin: 2mm 0;
        font-size: 11px;
      }
      .qr-code {
        width: 50mm;
        margin: 5mm auto;
      }
      .divider {
        border-top: 1px dashed #000;
        margin: 5mm 0;
      }
    </style>
  </head>
  <body>
    <div class='ticket'>
      <div class='header'>{{companyName}}</div>
      <div class='details'>
        <p>Ticket: {{ticketNumber}}</p>
        <p>Passenger: {{passengerName}}</p>
        <p>Route: {{routeName}}</p>
        <p>Departure: {{departureTime}}</p>
        <p>Seat: {{seatNumbers}}</p>
      </div>
      <div class='divider'></div>
      <img src='{{qrCodePath}}' alt='Ticket QR Code' class='qr-code' />
    </div>
  </body>
</html>